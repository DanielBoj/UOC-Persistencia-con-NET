@model GenteFit.Models.Horario

@{
    ViewData["Title"] = "Create";
    IEnumerable<Clase> clases = ViewData["Clases"] as IEnumerable<Clase>;
}

<h1>Create</h1>

<h4>Horario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dia" class="control-label"></label>
                <select asp-for="Dia" class="form-control" />
                    <option value="Lunes">Lunes</option>
					<option value="Martes">Martes</option>
					<option value="Miercoles">Miercoles</option>
					<option value="Jueves">Jueves</option>
					<option value="Viernes">Viernes</option>
					<option value="Sabado">Sabado</option>
                <span asp-validation-for="Dia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hora" class="control-label"></label>
                <input type="time" asp-for="Hora" class="form-control" />
                <span asp-validation-for="Hora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clase" class="control-label"></label>
                <select asp-for="Clase" class="form-control" />
                @if (clases != null)
                {
                    @foreach (var item in clases)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                }
                <span asp-validation-for="Clase" class="text-danger"></span>
            </div>
                
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
